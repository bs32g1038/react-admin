{
    "name": "react-admin-kit",
    "version": "1.0.0-alpha",
    "private": true,
    "devDependencies": {
        "@craco/craco": "^5.2.4",
        "antd": "^3.20.5",
        "axios": "^0.19.0",
        "babel-plugin-import": "^1.12.0",
        "classnames": "^2.2.6",
        "eslint-plugin-prettier": "^3.1.0",
        "http-proxy-middleware": "^0.19.1",
        "husky": "^3.0.1",
        "lint-staged": "^9.2.0",
        "node-sass": "^4.12.0",
        "prettier": "^1.18.2",
        "query-string": "^6.8.1",
        "react": "^16.8.6",
        "react-document-title": "^2.0.3",
        "react-dom": "^16.8.6",
        "react-redux": "^7.1.0",
        "react-router-config": "^5.0.1",
        "react-router-dom": "^5.0.1",
        "react-scripts": "^3.0.1",
        "redux": "^4.0.4",
        "redux-thunk": "^2.3.0"
    },
    "scripts": {
        "dev": "craco start",
        "build": "craco build",
        "test": "craco test",
        "eject": "craco eject"
    },
    "eslintConfig": {
        "extends": "react-app",
        "rules": {
            "indent": [
                1,
                4
            ]
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,json,md,css,scss,html}": [
            "prettier --config ./.prettierrc --write",
            "git add"
        ],
        "yarn.lock": [
            "git rm --cached"
        ]
    }
}
